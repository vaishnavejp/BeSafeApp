<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".NavBar"
    android:orientation="horizontal">
        <Button
            android:padding="2dp"
            android:id="@+id/NavBarPlacesButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/location"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="Places"
            >
        </Button>

        <Button
            android:padding="2dp"
            android:id="@+id/NavBarHomeButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/home"
            android:text="Home"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            ></Button>

        <Button
            android:layout_margin="0dp"
            android:padding="2dp"
            android:id="@+id/NavBarCallButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/call"
            android:text="Call"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            ></Button>

        <Button
            android:padding="2dp"
            android:id="@+id/NavBarAccountButton"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/account"
            android:text="Account"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"

            ></Button>

</LinearLayout>